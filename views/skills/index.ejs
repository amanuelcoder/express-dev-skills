<%- include('../partials/header') %>

<h3>Skills as of <%= time %></h3>

<ul>
  <% skills.forEach(function(t) { %>
    <li>
      <form
        action="/skills/<%= t.id %>?_method=DELETE"
        method="POST"
        class="delete-form"
      >
        <button type="submit">&#9758;</button>
      </form>
      <a href="/skills/<%= t.id %>"><%= t.skill %></a>
      - 
      <%= t.done ? 'done' : 'not done' %>
    </li>
  <% }); %>
</ul>
<a href="/skills/new">Add New</a>

<%- include('../partials/footer') %>
